{% extends 'base.html.twig' %}

{% block title %}{{ joueur.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header bg-dark text-white text-center">
          <h1>{{ joueur.nom|upper }}</h1>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h4><span style="color:red;">ID Joueur:</span>{{ joueur.id}}</h4>
              <h4><span style="color:red;">Nom de l'équipe:</span><a href="#" style="color: black;">{{ joueur.equipe.nome }}</a></h4>
              <h4><span style="color:red;">Date de naissance:</span> {{ joueur.datedenaissance|date('Y-m-d') }}</h4>
              <h4><span style="color:red;">Catégorie:</span> {{ joueur.category.nomcategory }}</h4>
              <h4><span style="color:red;">Poste:</span> {{ joueur.poste }}</h4>
              <h4><span style="color:red;">Nom de l'agent:</span> {{ joueur.agent }}</h4>
              <h4><span style="color:red;">Au contrat jusqu'à:</span> {{ joueur.datefin|date('Y-m-d') }}</h4>
            </div>
            <div class="col-md-6 text-center">
              {# Check if the joueur has an image #}
              {% if joueur.image %}
<img src="{{ joueur.image.url }}" alt="{{ joueur.nom }} Image" class="img-fluid rounded">
              {% else %}
                <p class="mt-3">No image available</p>
              {% endif %}
            </div>
          </div>
          <div class="mt-3">
            <a href="../home" class="btn btn-danger">Retour</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}